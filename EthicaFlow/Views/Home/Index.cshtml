@{
    ViewData["Title"] = "Home Page";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="text-center mt-5">
        <h1 class="display-4">Welcome to EthicaFlow</h1>
        <p class="lead">Ethics Review Management System</p>
        <p class="text-muted">Streamline your ethics submission workflow from draft creation to approval.</p>
        <hr class="my-4" />
        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">For Researchers</h5>
                        <p class="card-text">Create, edit, and submit ethics submissions. Upload documents and track your submission status.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">For Reviewers</h5>
                        <p class="card-text">Review assigned submissions, provide feedback, and make approval decisions.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">For Administrators</h5>
                        <p class="card-text">Manage all submissions, assign reviewers, and oversee the review process.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">Sign In</a>
        </div>
    </div>
}
else
{
    <div class="text-center mt-5">
        <h1 class="display-4">Welcome, @User.Identity.Name!</h1>
        <p class="lead">You are logged in as: @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</p>
    </div>
}
