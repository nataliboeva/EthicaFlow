@model IEnumerable<EthicaFlow.Models.EthicsSubmission>

@{
    ViewData["Title"] = "My Submissions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Submissions</h2>
    <a asp-action="Create" class="btn btn-primary">Create New Submission</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchString" class="form-control" placeholder="Search by title or description..." value="@ViewBag.SearchString" />
            </div>
            <div class="col-md-3">
                <select name="statusFilter" class="form-select">
                    <option value="">All Statuses</option>
                    @foreach (var status in ViewBag.Statuses as string[])
                    {
                        <option value="@status" selected="@(ViewBag.StatusFilter == status)">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">Filter</button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Clear</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Reviewer</th>
                    <th>Documents</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(item.Status)">@item.Status</span>
                        </td>
                        <td>@(item.Reviewer?.Name ?? "Not Assigned")</td>
                        <td>@item.Documents.Count</td>
                        <td>@item.CreatedDate.ToString("MM/dd/yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.SubmissionId" class="btn btn-sm btn-info">View</a>
                            @if (item.Status == "Draft" || item.Status == "Revision Required")
                            {
                                <a asp-action="Edit" asp-route-id="@item.SubmissionId" class="btn btn-sm btn-warning">Edit</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No submissions found. <a asp-action="Create">Create your first submission</a> to get started.</p>
    </div>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Draft" => "bg-secondary",
            "Submitted" => "bg-info",
            "Under Review" => "bg-primary",
            "Revision Required" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

